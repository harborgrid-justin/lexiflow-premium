# LexiFlow Frontend Environment Configuration for Codespaces

# Backend API URL - Updated for current backend port
VITE_API_URL=https://zany-doodle-gpvgj5x4r9qf9rwj-3000.app.github.dev
VITE_API_PREFIX=/api/v1

# Use Backend API instead of IndexedDB
# Set to 'false' to use local IndexedDB (offline mode)
# Set to 'true' to use backend PostgreSQL database
VITE_USE_BACKEND_API=true

# Enable legacy IndexedDB mode for development (DEPRECATED - will be removed in v2.0.0)
VITE_USE_INDEXEDDB=false

# Auth Configuration
VITE_AUTH_TOKEN_KEY=lexiflow_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=lexiflow_refresh_token

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_SYNC=true

# Google Gemini API Key (for Legal Research AI)
GEMINI_API_KEY=your_api_key_here

# Environment
VITE_ENV=development
