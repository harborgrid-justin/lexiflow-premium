# LexiFlow Frontend Environment Configuration Example
# Copy this file to .env.local for local development

# Backend API URL
VITE_API_URL=http://localhost:3001
VITE_API_PREFIX=/api/v1

# Use Backend API instead of IndexedDB
# Set to 'false' to use local IndexedDB (offline mode)
# Set to 'true' to use backend PostgreSQL database
VITE_USE_BACKEND_API=false

# Auth Configuration
VITE_AUTH_TOKEN_KEY=lexiflow_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=lexiflow_refresh_token

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_SYNC=false

# Google API Keys (Optional)
VITE_GEMINI_API_KEY=
