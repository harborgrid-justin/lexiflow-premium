# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=api/v1

# Database Configuration (PostgreSQL - Default)
# Option 1: Use DATABASE_URL for hosted databases (Neon, Heroku, etc.) - RECOMMENDED
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Option 2: Use individual parameters for local development
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=lexiflow
DB_USERNAME=lexiflow_admin
DB_PASSWORD=lexiflow_secure_2024
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_LOGGING=true

# Database Mode Configuration
# Set DEMO_MODE=false and DB_FALLBACK_SQLITE=false to always use PostgreSQL
DEMO_MODE=false
DB_FALLBACK_SQLITE=false

# JWT Configuration
JWT_SECRET=lexiflow_jwt_secret_enterprise_2024
JWT_EXPIRES_IN=900
JWT_REFRESH_SECRET=lexiflow_refresh_secret_2024
JWT_REFRESH_EXPIRES_IN=604800

# Token Storage TTL Configuration
# Time-to-live settings for different token types
REFRESH_TOKEN_TTL_DAYS=7
RESET_TOKEN_TTL_HOURS=1
MFA_TOKEN_TTL_MINUTES=5

# Security
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=*

# Redis Configuration
# Set to 'false' to disable Redis and use in-memory storage (for development/demo)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@lexiflow.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=LexiFlow <noreply@lexiflow.com>

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_ENABLED=true
OCR_LANGUAGES=eng
OCR_MAX_FILE_SIZE=104857600
OCR_TIMEOUT_MS=300000

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true

# WebSocket Configuration
WS_PORT=3001
WS_MAX_CONNECTIONS_PER_USER=5
WS_MAX_GLOBAL_CONNECTIONS=10000
WS_MAX_ROOMS_PER_USER=50
WS_RATE_LIMIT_EVENTS_PER_MINUTE=100

# File Storage Configuration
MAX_FILE_SIZE=524288000
MIN_DISK_SPACE=1073741824
ALLOWED_MIME_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Document Version Configuration
MAX_VERSIONS_PER_DOCUMENT=100
VERSION_AUTO_CLEANUP_ENABLED=false
VERSION_RETENTION_DAYS=365

# Queue Configuration
QUEUE_JOB_TIMEOUT_MS=600000
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY_MS=2000
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50

# External Integrations
PACER_API_KEY=your_pacer_api_key
PACER_API_URL=https://pacer.uscourts.gov/api

# Logging
LOG_LEVEL=debug

# OpenTelemetry Configuration
OTEL_ENABLED=false
OTEL_SERVICE_NAME=lexiflow-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_LOG_LEVEL=info
