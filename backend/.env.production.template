/**
 * Production Environment Configuration Template
 * Copy to .env.production and customize for your environment
 * 
 * SECURITY: Never commit actual credentials to version control
 */

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Memory Optimization
NODE_OPTIONS=--max-old-space-size=4096 --max-semi-space-size=64 --expose-gc
UV_THREADPOOL_SIZE=8

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=lexiflow
DB_PASSWORD=CHANGE_ME_PRODUCTION
DB_NAME=lexiflow_production
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=60000
DB_EVICTION_RUN_INTERVAL=10000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=3000

# JWT Authentication
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=CHANGE_ME_PRODUCTION_REFRESH_SECRET
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_USE_REDIS=true

# Bull Queue
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=
BULL_QUEUE_CONCURRENCY=5

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png

# OCR Processing
OCR_ENABLED=true
OCR_QUEUE_NAME=ocr-processing
OCR_CONCURRENCY=3

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
EMAIL_FROM=noreply@example.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/application.log
LOG_MAX_FILES=30d
LOG_MAX_SIZE=100m

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# Memory Management
MEMORY_MONITORING_ENABLED=true
MEMORY_WARNING_THRESHOLD=75
MEMORY_CRITICAL_THRESHOLD=85
MEMORY_CHECK_INTERVAL_MS=60000

# Leak Detection
LEAK_DETECTION_ENABLED=true
LEAK_CHECK_INTERVAL_MS=300000
HEAP_GROWTH_THRESHOLD_MB=50
AUTO_GC_ON_LEAK=false

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=https://app.example.com
WEBSOCKET_PING_INTERVAL_MS=30000
WEBSOCKET_PING_TIMEOUT_MS=5000

# CORS
CORS_ORIGIN=https://app.example.com
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024

# Cache Strategy
CACHE_TTL_DEFAULT=3600
CACHE_MAX_MEMORY_ENTRIES=10000
CACHE_MAX_MEMORY_SIZE=104857600
CACHE_CLEANUP_INTERVAL_MS=60000

# Search
SEARCH_PREVIEW_LIMIT=5
SEARCH_MAX_RESULTS=10000

# Bulk Operations
BULK_OPERATION_BATCH_SIZE=500
BULK_OPERATION_TIMEOUT_MS=300000

# Real-time Features
REALTIME_PING_INTERVAL_MS=25000
REALTIME_PING_TIMEOUT_MS=5000
