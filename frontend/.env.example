# LexiFlow Frontend Environment Variables
# Copy this file to .env for local development

# Port Configuration (centralized in src/config/ports.config.ts)
# - Frontend: 3400
# - Backend: 3000 (current), 5000 (legacy deprecated)
# - Storybook: 6006

# Backend API Configuration
VITE_API_URL=http://localhost:3000

# WebSocket URL (when enabled)
VITE_WS_URL=ws://localhost:3000

# Google Gemini API Key (for Legal Research AI)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Feature Flags
VITE_USE_BACKEND_API=false

# Environment
VITE_ENV=development

# Auto-Login (Development Only)
# Automatically logs in with demo credentials (admin@lexiflow.com / Demo123!)
# Set to 'true' to enable auto-login in development mode
VITE_AUTO_LOGIN=true
