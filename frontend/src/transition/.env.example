# Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_PROVIDER=jwt
VITE_AUTH_TOKEN_KEY=lexiflow_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=lexiflow_refresh_token

# Feature Flags
VITE_FEATURE_BILLING=true
VITE_FEATURE_REPORTING=true
VITE_FEATURE_ADMIN=true

# Observability
VITE_ENABLE_LOGGING=true
VITE_ENABLE_TRACING=false
VITE_ENABLE_ANALYTICS=false

# Theme
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=lexiflow_theme

# i18n
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr

# Security
VITE_ENABLE_CSP=true
VITE_CSP_REPORT_URI=

# Development
VITE_DEV_TOOLS=true
