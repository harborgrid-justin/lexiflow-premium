{
  "compilerOptions": {
    /* -------------------------------------------------------------------------- */
    /* PERFORMANCE & BUILD ARTIFACTS                                              */
    /* Essential for enterprise apps to keep IDE and CI/CD fast as code grows.    */
    /* -------------------------------------------------------------------------- */
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo",

    /* -------------------------------------------------------------------------- */
    /* BASE OPTIONS                                                               */
    /* -------------------------------------------------------------------------- */
    "rootDirs": [".", "./.react-router/types"],
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* -------------------------------------------------------------------------- */
    /* BUNDLER MODE (Vite / Rollup / Webpack 5)                                   */
    /* -------------------------------------------------------------------------- */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* -------------------------------------------------------------------------- */
    /* REACT / JSX                                                                */
    /* -------------------------------------------------------------------------- */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* -------------------------------------------------------------------------- */
    /* STRICTNESS & SAFETY                                                        */
    /* -------------------------------------------------------------------------- */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": true,

    /* THE "BILLION DOLLAR MISTAKE" FIX */
    /* Forces you to check if array[index] is defined before using it. */
    "noUncheckedIndexedAccess": true,

    /* -------------------------------------------------------------------------- */
    /* INTEROP & RESOLUTION                                                       */
    /* -------------------------------------------------------------------------- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* -------------------------------------------------------------------------- */
    /* PATH MAPPING (DOMAIN DRIVEN DESIGN)                                        */
    /* -------------------------------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@api/domains/*": ["src/api/domains/*"],
      "@data/*": ["src/api/data/*"],
      "@shared/*": ["src/shared/*"],
      "@ui/*": ["src/shared/ui/*"],
      "@components/*": ["src/components/*"],
      "@components/ui/*": ["src/shared/ui/*"],
      "@theme/*": ["src/shared/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@providers/*": ["src/providers/*"],
      "@features/*": ["src/features/*"],
      "@features/litigation": ["src/features/litigation"],
      "@features/document-assembly": ["src/features/drafting"],
      "@features/knowledge": ["src/features/knowledge"],
      "@features/operations": ["src/features/operations"],
      "@features/cases": ["src/features/cases"],
      "@features/admin": ["src/features/admin"],
      "@features/visual": ["src/features/visual"],
      "@hooks/*": ["src/hooks/*"],
      "@providers/ThemeContext": ["src/contexts/theme/ThemeContext.tsx"],
      "@providers/ToastContext": ["src/contexts/toast/ToastContext.tsx"],
      "@services/*": ["src/services/*"],
      "@services/integrationOrchestrator": [
        "src/services/integrationOrchestrator.ts"
      ],
      "@services/db": ["src/services/data/db.ts"],
      "@services/domains": ["src/services/domain"],
      "@services/repositories": ["src/services/data/repositories"],
      "@services/core": ["src/services/core"],
      "@rendering/*": ["rendering/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@config/tabs.config": ["src/config/tabs.config.ts"],
      "@constants/*": ["src/constants/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "rendering/**/*.ts",
    "rendering/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "cypress"
  ]
}
