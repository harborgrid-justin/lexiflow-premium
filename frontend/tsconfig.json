{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode (Required for Vite 7) */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* JSX (Modern React Transform) */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Strictness & Reliability */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": true,

    /* Interop & Resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@api/domains/*": ["src/api/domains/*"],
      "@data/*": ["src/api/data/*"],
      "@components/*": ["src/components/*"],
      "@theme/*": ["src/components/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@providers/*": ["src/providers/*"],
      "@features/*": ["src/features/*"],
      "@features/litigation": ["src/features/litigation"],
      "@features/document-assembly": ["src/features/drafting"],
      "@features/knowledge": ["src/features/knowledge"],
      "@features/operations": ["src/features/operations"],
      "@features/cases": ["src/features/cases"],
      "@features/admin": ["src/features/admin"],
      "@features/visual": ["src/features/visual"],
      "@hooks/*": ["src/hooks/*"],
      "@providers/*": ["src/providers/*"],
      "@providers/ToastContext": ["src/providers/ToastContext.tsx"],
      "@providers/ThemeContext": ["src/providers/ThemeContext.tsx"],
      "@services/*": ["src/services/*"],
      "@services/integrationOrchestrator": [
        "src/services/integrationOrchestrator.ts"
      ],
      "@services/db": ["src/services/data/db.ts"],
      "@services/domains": ["src/services/domain"],
      "@services/repositories": ["src/services/data/repositories"],
      "@services/core": ["src/services/core"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@config/tabs.config": ["src/config/tabs.config.ts"],
      "@constants/*": ["src/constants/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "cypress"
  ]
}
